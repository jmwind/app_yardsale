<%= render "/common/top_bar" %>
<div class="section">
<div class="section-content">
  
  <div class="section-row">
    <div class="section-cell">
      <h2>Inventory</h2>
      <span class="stat-green">$<%= @total_inventory %></span>
      <p class="stat-description">45 Total Products</p>
    </div>
    <div class="section-cell">
      <h2>Reservations</h2>
      <span class="stat-green">3/45</span>
      <p class="stat-description">12 buyers on waiting lists</p>
    </div>
    <div class="section-cell">
      <h2>Waitlist Activity</h2>
      <%= column_chart(Buyer.group(:created_at).count, colors: ["#C0D891"], height: "75px") %>
    </div>
  </div>

  <div class="section-row">
    <div class="section-cell">
    <div class="section-filter">    
      <div>
        <div class="filter-freecell"><input class="input-search" onkeyup="filter2(this, '.table-section', 1);" type="text" placeholder="Filter by product"></div>
      </div>
    </div>
    <table class="table-section">
        <thead>
          <tr>
            <th class="sortable">Product</th>
            <th class="sortable">Customers</th>
            <th class="sortable">Raises</th>
            <th class="sortable">Actions</th>
          </tr>
        </thead>
        <tbody>
          <br/>
          <% @product_buyers.each do |product| %>            
            <% id = product.remote_id %>
            <% title = @product_map[id] %>
            <tr>
            <td>
              <a href="buyers?product_id=<%= id %>&title=<%= title %>"><%= title %></a> 
              (<a href="#" onclick="ShopifyApp.redirect('/products/<%= id %>}')">inventory</a>)</td>
            <td><span class="lightgray"><%= product.buyers.count %></span></td>
            <td>
              <% raises = product.num_raises %>
              <span class="tag <%= raises == 0 ? "lightgray" : "orange" %>"><%= product.num_raises %></span></span> </td>
            <td><a href="#top" class="btn default">Notify</a> <%= link_to("Delete", "product?product_id=#{id}", method: :delete, class: "btn", data: { confirm: "Are you sure?" }) %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
    </div>
  </div>
</div>
</div>
