<div class="waitlist_section" id="waitlist_section">
  <% if product_available == 0 %>
    <p><strong>WAIT, DON'T GO!!</strong> This item has been reserved, but not payed for yet.      >>> <a class="wl_form_toggle" href="#">Join the waiting list</a></p>
    <div class="waitlist_form" style="display: none">
      <p>There are <%= @product.buyers.count %> people in the waiting list.</p>

      <%= form_tag("#{Settings.host}/proxy/waitlists", format: :js, id: "waitlist_form_div", method: "post", remote: true) do %>

        <%= label_tag(:name_l, "Name") %>
        <%= text_field_tag(:name, '', autofocus: true) %>

        <%= label_tag(:email_l, "E-mail") %>
        <%= email_field_tag(:email) %>

        <%= label_tag(:raise_l, "Raise the price (You can offer to pay more once. The reservation holder will have rights to match your price.)") %>
        <%= text_field_tag(:raise) %>

        <%= hidden_field_tag :shop , @shop.url %>
        <%= hidden_field_tag :product_id , product_id %>

        <%= submit_tag("E-mail me when available") %>
      <% end %>
    </div>
  <% end %>
</div>
